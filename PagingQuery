-- rownum 숫자 매겨줌
SELECT ROWNUM, EMPLOYEE_ID 
  FROM (SELECT * FROM EMPLOYEES ORDER BY SALARY DESC)
 WHERE ROWNUM BETWEEN 1 AND 10 ;
 
-- rownum 은 1부터만 카운트되므로 rnum으로 재정의해서 사용
SELECT RNUM, EMPLOYEE_ID 
  FROM (
    SELECT ROWNUM RNUM, EMPLOYEE_ID 
      FROM (SELECT * FROM EMPLOYEES ORDER BY SALARY DESC)
  )
 WHERE RNUM BETWEEN 2 AND 10 ;
 

-- 입사일이 가장 늦은 순서대로 11번째부터 20번째까지 사원 정보 (페이징 쿼리)
SELECT RNUM, EMPLOYEE_ID, FIRST_NAME, LAST_NAME, HIRE_DATE 
  FROM (
    SELECT ROWNUM AS RNUM, EMPLOYEE_ID, FIRST_NAME, LAST_NAME, HIRE_DATE 
      FROM (SELECT * FROM EMPLOYEES ORDER BY HIRE_DATE DESC)
  ) 
 WHERE RNUM BETWEEN 11 AND 20;
